@page "/workouts/delete/{Id:int}"
@inject Swol.Data.ApplicationDbContext Db
@inject NavigationManager Navigation
@using Swol.Data.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete Workout</PageTitle>

<div class="max-w-4xl mx-auto p-4 space-y-6">

<h1 class="text-2xl font-bold mb-6">Delete Workout</h1>

@if (workout == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6 rounded">
        <strong>Are you sure you want to delete this workout?</strong>
    </div>
    <dl class="grid grid-cols-1 sm:grid-cols-4 gap-x-4 gap-y-2 mb-6">
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Name</dt>
        <dd class="col-span-1 sm:col-span-3">@workout.Name</dd>
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Description</dt>
        <dd class="col-span-1 sm:col-span-3">@workout.Description</dd>
    </dl>
    <div class="flex items-center mt-6">
        <button class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow" @onclick="DeleteWorkout">Delete</button>
        <a class="ml-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded shadow" href="/workouts">Cancel</a>
    </div>
}

</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Workout? workout;

    protected override async Task OnInitializedAsync()
    {
        workout = await Db.Workouts.FindAsync(Id);
        if (workout == null)
        {
            Navigation.NavigateTo("/workouts");
        }
    }

    private async Task DeleteWorkout()
    {
        if (workout != null)
        {
            Db.Workouts.Remove(workout);
            await Db.SaveChangesAsync();
        }
        Navigation.NavigateTo("/workouts");
    }
}
