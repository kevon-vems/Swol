@page "/workouts/delete/{Id:int}"
@inject Swol.Data.ApplicationDbContext Db
@inject NavigationManager Navigation
@using Swol.Data.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete Workout</PageTitle>

<h1>Delete Workout</h1>

@if (workout == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this workout?</strong>
    </div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@workout.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@workout.Description</dd>
    </dl>
    <button class="btn btn-danger" @onclick="DeleteWorkout">Delete</button>
    <a class="btn btn-secondary ms-2" href="/workouts">Cancel</a>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private Workout? workout;

    protected override async Task OnInitializedAsync()
    {
        workout = await Db.Workouts.FindAsync(Id);
        if (workout == null)
        {
            Navigation.NavigateTo("/workouts");
        }
    }

    private async Task DeleteWorkout()
    {
        if (workout != null)
        {
            Db.Workouts.Remove(workout);
            await Db.SaveChangesAsync();
        }
        Navigation.NavigateTo("/workouts");
    }
}
