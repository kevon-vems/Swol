@page "/exercisesets/delete/{Id:int}"
@inject Swol.Data.ApplicationDbContext Db
@inject NavigationManager Navigation
@using Swol.Data.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Delete Exercise Set</PageTitle>

<div class="max-w-4xl mx-auto p-4 space-y-6">

<h1 class="text-2xl font-bold mb-6">Delete Exercise Set</h1>

@if (set == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 mb-6">
        <strong>Are you sure you want to delete this exercise set?</strong>
    </div>
    <dl class="grid grid-cols-1 sm:grid-cols-4 gap-x-4 gap-y-2 mb-6">
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Workout Log</dt>
        <dd class="col-span-1 sm:col-span-3">@set.WorkoutLogId</dd>
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Exercise</dt>
        <dd class="col-span-1 sm:col-span-3">@set.Exercise?.Name</dd>
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Reps</dt>
        <dd class="col-span-1 sm:col-span-3">@set.Reps</dd>
        <dt class="font-semibold text-gray-700 col-span-1 sm:col-span-1">Weight</dt>
        <dd class="col-span-1 sm:col-span-3">@set.WeightInKg</dd>
    </dl>
    <div class="flex items-center mt-6">
        <button class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded shadow" @onclick="DeleteSet">Delete</button>
    <a class="ml-3 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold py-2 px-4 rounded shadow" href="/exercisesets">Cancel</a>
    </div>
}

</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private ExerciseSet? set;

    protected override async Task OnInitializedAsync()
    {
        set = await Db.ExerciseSets.Include(es => es.Exercise).FirstOrDefaultAsync(es => es.Id == Id);
        if (set == null)
        {
            Navigation.NavigateTo("/exercisesets");
        }
    }

    private async Task DeleteSet()
    {
        if (set != null)
        {
            Db.ExerciseSets.Remove(set);
            await Db.SaveChangesAsync();
        }
        Navigation.NavigateTo("/exercisesets");
    }
}
