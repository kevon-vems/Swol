@page "/workouts"
@inject Swol.Data.ApplicationDbContext Db
@using Swol.Data.Models
@using Microsoft.EntityFrameworkCore

<PageTitle>Workouts</PageTitle>

<h1>Workouts</h1>

<a class="btn btn-primary mb-3" href="/workouts/create">Add Workout</a>

@if (workouts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var workout in workouts)
            {
                <tr>
                    <td>@workout.Name</td>
                    <td>@workout.Description</td>
                    <td>
                        <a class="btn btn-sm btn-secondary" href="/workouts/edit/@workout.Id">Edit</a>
                        <a class="btn btn-sm btn-danger" href="/workouts/delete/@workout.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Workout>? workouts;

    protected override async Task OnInitializedAsync()
    {
        workouts = await Db.Workouts.ToListAsync();
    }
}
