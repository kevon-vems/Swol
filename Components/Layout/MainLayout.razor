@inherits LayoutComponentBase

<div class="flex flex-col h-screen overflow-hidden">
    <header class="flex-shrink-0 h-14 flex items-center bg-gradient-to-r from-[#052767] to-[#3a0647] px-6 relative text-white z-10">
        <a href="" class="text-lg font-bold text-white">Swol</a>
        <!-- Hamburger and nav menu for mobile -->
        <input type="checkbox" id="nav-toggle" class="peer absolute right-6 top-2 w-10 h-10 opacity-0 sm:hidden" />
        <label for="nav-toggle" class="sm:hidden flex flex-col justify-center items-center w-10 h-10 absolute right-6 top-2 cursor-pointer z-20" aria-label="Open navigation menu">
            <span class="block w-8 h-1 my-1 bg-gray-300 rounded transition"></span>
            <span class="block w-8 h-1 my-1 bg-gray-300 rounded transition"></span>
            <span class="block w-8 h-1 my-1 bg-gray-300 rounded transition"></span>
        </label>
        <div class="hidden peer-checked:block absolute top-14 inset-x-0 bg-gradient-to-b from-[#052767] to-[#3a0647] shadow-md z-10 pb-4 sm:hidden">
            <NavMenu />
        </div>
    </header>
    <div class="flex-1 flex flex-col sm:flex-row overflow-hidden">
        <nav class="hidden sm:block w-[250px] flex-shrink-0 overflow-y-auto bg-gradient-to-b from-[#052767] to-[#3a0647]">
            <NavMenu />
        </nav>
        <section class="flex-1 overflow-y-auto p-2 sm:p-6 bg-gray-50">
            @Body
        </section>
    </div>
</div>

<div id="blazor-error-ui" data-nosnippet class="fixed bottom-0 left-0 w-full z-[1000] hidden box-border shadow-md p-3 bg-yellow-100">
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss absolute right-3 top-2 cursor-pointer">🗙</span>
</div>